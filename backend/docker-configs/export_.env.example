# ==============================================
# Environment Configuration
# ==============================================
# Copy this file to .env and fill in the values
#
# REQUIRED: You must set JWT_SECRET before running
# ==============================================

# Project name (used for container naming)
PROJECT_NAME=my-app

# ==============================================
# Backend Configuration
# ==============================================

# Database connection string
# SQLite (default - good for development):
DATABASE_URL=sqlite:///./data/app.db

# PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# JWT Authentication Secret
# IMPORTANT: Generate a secure random string for production!
# You can use: openssl rand -hex 32
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING

# JWT token expiration (hours)
JWT_EXPIRATION_HOURS=24

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Debug mode (set to true for development)
DEBUG=false

# Backend port
BACKEND_PORT=8000

# ==============================================
# Frontend Configuration
# ==============================================

# API URL for frontend to connect to backend
# In Docker, this should match the exposed backend port
VITE_API_BASE_URL=http://localhost:8000

# Frontend port (for Docker deployment)
FRONTEND_PORT=3000

# ==============================================
# Optional: PostgreSQL (if using postgres instead of SQLite)
# ==============================================

# POSTGRES_USER=appuser
# POSTGRES_PASSWORD=apppassword
# POSTGRES_DB=appdb
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
